<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_ReviaCharged</defName>
    <label>血神祝福</label>
    <ammoTypes>
      <!--<Ammo_PalestoneCharged>Bullet_PalestoneCharged</Ammo_PalestoneCharged>-->
      <Ammo_PalestoneCharged>Bullet_PalestoneCharged_Exp</Ammo_PalestoneCharged>
      <Ammo_BloodstoneGrenade>Bullet_BloodstoneGrenade</Ammo_BloodstoneGrenade>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
  <CombatExtended.AmmoSetDef>
    <defName>AmmoSet_PalestoneCharged</defName>
    <label>充能苍石</label>
    <ammoTypes>
      <Ammo_PalestoneCharged>Bullet_PalestoneCharged</Ammo_PalestoneCharged>
    </ammoTypes>
  </CombatExtended.AmmoSetDef>
  <ThingDef ParentName="ReviaBaseAdvancedRangedWeapon">
    <defName>ReviaFlechetteCannon</defName>
    <label>破碎加农</label>
    <description>一种大口径猎枪，能够向敌人发射带玻璃钢涂层的铀弹片，在近距离交战十分致命，同时配备了重型刺刀，使其在白刃战表现也不错</description>
    <thingCategories>
      <li>Shotguns</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Weapons/FlechetteCannon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ReviaRaceAdvancedEquipment</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Shotgun_Component>1</Shotgun_Component>
      <Weapon_Parts>7</Weapon_Parts>
      <ComponentIndustrial>9</ComponentIndustrial>
      <Plastic>20</Plastic>
    </costList>
    <stuffCategories>
      <li>StrongMetallic</li>
    </stuffCategories>
    <costStuffCount>40</costStuffCount>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>ReviaRangedAdvanced</li>
    </weaponTags>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <SightsEfficiency>1.0</SightsEfficiency>
      <Bulk>10.0</Bulk>
      <Mass>8.0</Mass>
      <ShotSpread>0.18</ShotSpread>
      <SwayFactor>1.45</SwayFactor>
      <RangedWeapon_Cooldown>0.15</RangedWeapon_Cooldown><!--冷却-->
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_12Gauge_Beanbag</defaultProjectile>
        <warmupTime>0.1</warmupTime><!--连射间隔-->
        <range>5</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <recoilAmount>1.95</recoilAmount><!--停止性-->
        <burstShotCount>1</burstShotCount><!--连射-->
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
      </li>
    </verbs>
    <comps>
      <li Class="CombatExtended.CompProperties_FireModes">
        <noSnapshot>True</noSnapshot>
        <aiUseBurstMode>FALSE</aiUseBurstMode>
        <!--<aiAimMode>Snapshot</aiAimMode>
        <aimedBurstShotCount>2</aimedBurstShotCount>-->
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>4</magazineSize><!--弹夹-->
        <reloadOneAtATime>true</reloadOneAtATime>
        <reloadTime>1</reloadTime>
        <ammoSet>AmmoSet_12Gauge</ammoSet>
      </li>
    </comps>
    <smeltProducts>
      <Shotgun_Component>1</Shotgun_Component>
      <Weapon_Parts>3</Weapon_Parts>
    </smeltProducts>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.6</cooldownTime>
        <armorPenetrationBlunt>3.24</armorPenetrationBlunt>
      </li>
      <li Class="CombatExtended.ToolCE">
        <capacities>
          <li>Gash</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
        <armorPenetrationBlunt>1.85</armorPenetrationBlunt>
        <armorPenetrationSharp>3.74</armorPenetrationSharp>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="ReviaBaseAdvancedRangedWeapon">
    <defName>ScarletEcho</defName>
    <label>猩红回响</label>
    <description>得到血神认可，能够承载血神祝福的致命武器，在表面的强大属性下还有着未被发觉的秘密</description>
    <thingCategories>
      <li>Shotguns</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/Weapons/ChainswordGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ReviaRaceConsecratedWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <ReviaChainSword>1</ReviaChainSword>
      <ReviaFlechetteCannon>2</ReviaFlechetteCannon>
      <ReviaGreaterBloodRune>1</ReviaGreaterBloodRune>
    </costList>
    <costStuffCount>40</costStuffCount>
    <stuffCategories>
      <li>StrongMetallic</li>
    </stuffCategories>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <weaponTags>
      <li>ReviaRangedAdvanced</li>
    </weaponTags>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <SightsEfficiency>1.0</SightsEfficiency>
      <Bulk>10.0</Bulk>
      <Mass>8.0</Mass>
      <ShotSpread>0.18</ShotSpread>
      <SwayFactor>1.45</SwayFactor>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown><!--冷却-->
    </statBases>
    <verbs>
	<!--目前配置最短：连射0.5预热+4.5射击+1冷却=6s；最长：（0.5+1+1）*10=25s-->
      <li Class="CombatExtended.VerbPropertiesCE">
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_PalestoneCharged_Exp</defaultProjectile>
        <warmupTime>0.5</warmupTime><!--预热-->
        <range>5</range>
        <ticksBetweenBurstShots>30</ticksBetweenBurstShots><!--连射间隔，需要/60-->
        <recoilAmount>1.95</recoilAmount><!--停止性-->
        <burstShotCount>4</burstShotCount><!--连射-->
        <soundCast>Shot_Shotgun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale><!--枪口火焰-->
        <ai_IsBuildingDestroyer>false</ai_IsBuildingDestroyer>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Biocodable" />
      <li Class="ReviaRace.Comps.CompProperties_LifeLeech">
        <LeechStrength>2.5</LeechStrength>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <!--<noSnapshot>True</noSnapshot>-->
        <aiUseBurstMode>FALSE</aiUseBurstMode>
        <aiAimMode>AimedShot</aiAimMode>
        <aimedBurstShotCount>2</aimedBurstShotCount>
      </li>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>4</magazineSize><!--弹夹-->
        <reloadOneAtATime>true</reloadOneAtATime>
        <reloadTime>1</reloadTime>
         <ammoSet>AmmoSet_ReviaCharged</ammoSet>
      </li>
    </comps>
    <smeltProducts>
      <Shotgun_Component>1</Shotgun_Component>
      <Weapon_Parts>3</Weapon_Parts>
    </smeltProducts>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <capacities>
          <li>Gash</li>
        </capacities>
        <power>26</power>
        <cooldownTime>1.9</cooldownTime>
        <armorPenetrationBlunt>4.48</armorPenetrationBlunt>
        <armorPenetrationSharp>7.44</armorPenetrationSharp>
      </li>
    </tools>
  </ThingDef>
</Defs>